<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.com.cesarcorona.coffeetime.MainActivity">




    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.Toolbar
                style="@style/MyToolbarStyle"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                />

            <TextView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:text="Escoge una opcion:"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />



        </RelativeLayout>




    </android.support.design.widget.AppBarLayout>


    <Button
        android:visibility="gone"
        android:textSize="40dp"
        android:text="Salir"
        android:id="@+id/log_out_button"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_cofee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="1"
        app:cardCornerRadius="4dp"
        app:cardElevation="15dp"
        app:cardMaxElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_logo_cofe"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:keepScreenOn="true"
                android:text="@string/cafe"
                android:textAllCaps="true"
                android:textColor="#77e5f5"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_merienda"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_weight="1"
        card_view:cardMaxElevation="20dp"
        android:layout_height="0dp"
        card_view:cardElevation="15dp"
        card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fork_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fork"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:keepScreenOn="true"
                android:textAllCaps="true"
                android:text="@string/merienda"
                android:textColor="#77e5f5"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>
