<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="#EEE"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="0dp"
                android:layout_height="match_parent">


                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity=""
                    android:id="@+id/person_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="Nombre de la persona"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_margin="10dp"
                            android:src="@drawable/date_selector_icon"
                            android:layout_marginLeft="20dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:id="@+id/set_time_text"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:maxLines="2"
                            android:text="Lunes 25 Noviembre 2017"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="0dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/map_selector_icon"
                            android:layout_marginLeft="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/place_of_date"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:maxLines="2"
                            android:text="Starbucks"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />





                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="0dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/people_icon"
                            android:layout_marginLeft="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/people_in_date"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:maxLines="2"
                            android:text="2 "
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:gravity="center"
                            android:background="@android:color/transparent"
                            android:layout_gravity="end"
                            android:id="@+id/connect_button"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:text="@string/rate_this_date"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />



                    </LinearLayout>










                </LinearLayout>







            </LinearLayout>


            <RelativeLayout
                android:layout_weight="20"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:id="@+id/rate_person"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_grade_black_36dp"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_gravity="center"

                        android:visibility="visible"
                        android:padding="10dp"
                        android:id="@+id/message_persone"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_message_black_36dp"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:padding="10dp"
                        android:id="@+id/delete_button"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_delete_black_36dp"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                </LinearLayout>





            </RelativeLayout>






        </LinearLayout>




    </android.support.v7.widget.CardView>





</LinearLayout>