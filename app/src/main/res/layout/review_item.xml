<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_chat_"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_chat"
            android:src="@drawable/coffe_logo"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <TextView
            android:gravity="center"
            android:textSize="16sp"
            android:text="Nombre de prueba"
            android:textColor="#323232"
            android:id="@+id/nombreChat"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/fecha_chat"
            android:textSize="12sp"
            android:text="12/12/2017"
            android:paddingRight="5dp"
            android:gravity="left|center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp" />



    </LinearLayout>

    <android.support.v7.widget.AppCompatRatingBar
        android:layout_gravity="center"
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        style="?android:attr/ratingBarStyle"
        android:numStars="5"
        android:stepSize="0.1"
        android:isIndicator="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/review_text"
        android:textColor="#323232"
        android:text="@string/this_is_a_test_review_if_you_can_se_this_something_was_wrong_contact_to_contacto_cesarcorona_com_mx"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





</LinearLayout>