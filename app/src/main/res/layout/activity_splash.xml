<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_splash_gradient"
    android:orientation="vertical"
    android:id="@+id/root_view"
    tools:context="mx.com.cesarcorona.coffeetime.activities.SplashActivity">


    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/fullscreen_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:keepScreenOn="true"
            android:textAllCaps="true"
            android:text="@string/app_name_splash"
            android:textColor="#77e5f5"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_logo_cofe" />

    </LinearLayout>




</RelativeLayout>
