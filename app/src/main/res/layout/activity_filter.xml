<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="mx.com.cesarcorona.coffeetime.activities.CoffeTimeActiviy">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.Toolbar
                style="@style/MyToolbarStyle"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                />

            <TextView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:text="Choose an option:"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />



        </RelativeLayout>




    </android.support.design.widget.AppBarLayout>




        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="@drawable/speech"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:paddingLeft="60dp"
            android:layout_height="50dp"
            android:paddingRight="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewComicSans"

                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:keepScreenOn="true"
                android:text="@string/what_do_you_want_to_eat"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.AppCompatSpinner
            android:layout_alignParentLeft="true"
            android:id="@+id/categorySpinner"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:minWidth="150dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp"
            android:layout_height="40dp">

        </android.support.v7.widget.AppCompatSpinner>

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/ic_search_black_48dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:tint="#000"
            android:id="@+id/search_button"
            android:padding="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />


    </RelativeLayout>





    <TextView
        style="@style/TextViewComicSans"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:keepScreenOn="true"
        android:gravity="left"
        android:padding="20dp"
        android:text="Prefered location"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:layout_centerInParent="true"
            android:inputType="none"
            android:editable="false"
            android:drawableLeft="@drawable/ic_search_black_48dp"
            android:id="@+id/buscar_text"
            android:textSize="16sp"
            android:hint="Buscar"
            android:background="@drawable/white_rounded"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:layout_centerInParent="true"
            android:background="@drawable/white_rounded"
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.location.places.ui.SupportPlaceAutocompleteFragment"
            />


    </RelativeLayout>



    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <RelativeLayout
            android:background="#44000000"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:src="@drawable/ic_home_black_36dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:tint="#FFF"
                android:id="@+id/home_icon"
                android:padding="5dp"
                android:layout_width="48dp"
                android:layout_height="match_parent" />

            <ImageView
                android:src="@drawable/ic_arrow_forward_black_36dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:tint="#FFF"
                android:id="@+id/next_icon"
                android:padding="5dp"
                android:layout_width="48dp"
                android:layout_height="match_parent" />


        </RelativeLayout>


    </RelativeLayout>







</LinearLayout>
