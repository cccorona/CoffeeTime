<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.com.cesarcorona.coffeetime.activities.CoffeTimeActiviy">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_cofee"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        card_view:cardMaxElevation="20dp"
        card_view:cardBackgroundColor="@color/color_spash"
        android:layout_height="50dp"
        card_view:cardElevation="15dp"
        card_view:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:keepScreenOn="true"
                android:text="¿Que deseas comer?"
                android:textColor="#77e5f5"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:minWidth="200dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="40dp">

    </android.support.v7.widget.AppCompatSpinner>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:keepScreenOn="true"
        android:gravity="left"
        android:padding="20dp"
        android:text="¿Ubicación preferida? "
        android:textColor="@color/color_spash"
        android:textSize="22sp"
        android:textStyle="bold" />


    <EditText
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_search_black_48dp"
        android:id="@+id/comentario_text"
        android:textSize="16sp"
        android:layout_gravity=""
        android:hint="Buscar"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/white_rounded"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:background="#44000000"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        </LinearLayout>


    </RelativeLayout>







</LinearLayout>
